    <value>
      <li>RTTS_WASTEPACK_RETURN_TO_A_STAR_1x</li>
      <li>RTTS_WASTEPACK_RETURN_TO_A_STAR_3x</li>
      <li>RTTS_STARLINK_1x</li>
    </value>
  </Operation>

</Patch>
