<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 培養時のレシピ: 共通部 -->
  <RecipeDef Abstract="True" Name="RTTS_Mech_Recipe_WorkableStar">
    <!-- 前提研究 -->
    <researchPrerequisites>
      <li>StandardMechtech</li>
      <li>RTTS_RESEARCH_PROJECT_1T</li> <!-- RTTS側の前提研究も必要とする -->
    </researchPrerequisites>

    <workAmount>900</workAmount> <!-- 培養開始時の作業量 -->
    <gestationCycles>1</gestationCycles> <!-- 培養サイクル数 -->
    <formingTicks>30000</formingTicks> <!-- 培養サイクル一回あたりの時間, 半日ぐらい -->
    <mechanitorOnlyRecipe>true</mechanitorOnlyRecipe> <!-- メカニターのみが使用可能なレシピ -->
    <workSpeedStat>MechFormingSpeed</workSpeedStat> <!-- 作業速度のステータス -->
    <soundWorking>MechGestatorCycle_Initiating</soundWorking> <!-- 培養開始時の音 -->

    <!-- レシピの使用者(作業台) -->
    <recipeUsers>
      <li>MechGestator</li>
    </recipeUsers>
  </RecipeDef>

  <!-- 実レシピ：ワークスター -->
  <RecipeDef ParentName="RTTS_Mech_Recipe_WorkableStar">
    <defName>RTTS_Mech_Recipe_work</defName>
    <label>gestate Work Star</label>
    <description>Gestate a Work Star</description>
    <jobString>Gestating Work Star.</jobString>

    <!-- 説明文からリンクされる対象 -->
    <descriptionHyperlinks>
      <ThingDef>RTTS_Mech_work_star_instance</ThingDef> <!-- 培養されるメカノイドを指定してある -->
    </descriptionHyperlinks>

    <!-- 素材 -->
    <ingredients Inherit="False">
      <li>
        <filter>
          <thingDefs>
            <li>RTTS_STAR_PIECE</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>

    <!-- 成果物(本レシピの場合は培養されるメカノイド) -->
    <products>
      <RTTS_Mech_work_star_instance>1</RTTS_Mech_work_star_instance>
    </products>
  </RecipeDef>

  <!-- 実レシピ：masterワークスター -->
  <RecipeDef ParentName="RTTS_Mech_Recipe_WorkableStar">
    <defName>RTTS_Mech_Recipe_work_master</defName>
    <label>gestate Master Work Star</label>
    <description>Gestate a Master Work Star</description>
    <jobString>Gestating Master Work Star.</jobString>

    <!-- 説明文からリンクされる対象 -->
    <descriptionHyperlinks>
      <ThingDef>RTTS_Mech_work_star_master</ThingDef> <!-- 培養されるメカノイドを指定してある -->
    </descriptionHyperlinks>

    <!-- 素材 -->
    <ingredients Inherit="False">
      <li>
        <filter>
          <thingDefs>
            <li>RTTS_STAR_PIECE</li>
          </thingDefs>
        </filter>
        <count>300</count>
      </li>
    </ingredients>

    <workAmount>1800</workAmount> <!-- 培養開始時の作業量 -->
    <gestationCycles>3</gestationCycles> <!-- 培養サイクル数, x3 なのでトータル3日ぐらい -->
    <formingTicks>60000</formingTicks> <!-- 培養サイクル一回あたりの時間, 24時間 -->

    <!-- 成果物(本レシピの場合は培養されるメカノイド) -->
    <products>
      <RTTS_Mech_work_star_master>1</RTTS_Mech_work_star_master>
    </products>


    <!-- 前提研究(上書き) -->
    <researchPrerequisites Inherit="False">
      <li>HighMechtech</li>
      <li>RTTS_RESEARCH_PROJECT_1T</li> <!-- RTTS側の前提研究も必要とする -->
    </researchPrerequisites>
  </RecipeDef>

</Defs>
