<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ワークスター・ガンマ : 料理・調教担当 -->

  <ThingDef ParentName="RTTS_Mech_work_star">
    <defName>RTTS_Mech_gamma_star</defName>
    <label>work star gamma</label>
    <description>Mechanoid for Warden and Cooking operations.
      \n\n&lt;color=#808080&gt;EnabledWork: Firefighter, Handling, Cooking, Hauling, Cleaning&lt;/color&gt;</description>

    <!-- 種族定義 -->
    <race>
      <!-- 実施可能な作業の定義 -->
      <mechEnabledWorkTypes>
        <li>Firefighter</li><!-- 消火 -->
        <li>Handling</li> <!-- 調教 -->
        <li>Cooking</li> <!-- 料理 -->
        <li>Hauling</li> <!-- 運搬 -->
        <li>Cleaning</li> <!-- 清掃 -->
      </mechEnabledWorkTypes>

      <!-- 優先順位 -->
      <mechWorkTypePriorities>
        <Firefighter>1</Firefighter>
        <Handling>1</Handling>
        <Cooking>2</Cooking>
        <Hauling>4</Hauling>
        <Cleaning>4</Cleaning>
      </mechWorkTypePriorities>
    </race>

    <!-- レシピとか研究欄とかで表示されるアイコンとその拡大スケール -->
    <uiIconPath>UI/GammaStar</uiIconPath>
    <uiIconScale>1</uiIconScale>

  </ThingDef>

</Defs>
