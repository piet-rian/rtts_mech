<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ワークスター : 汎用作業用メカノイド -->

  <ThingDef ParentName="RTTS_Mech_work_star">
    <defName>RTTS_Mech_work_star_master</defName>
    <label>master work star</label>

    <statBases>
      <BandwidthCost>6</BandwidthCost> <!-- 要求帯域幅 -->
    </statBases>

    <!-- memo.
      description においてはカラータグ `<color=#FF0000>xxx</color>` で色を変えられる
      ただし、 <> は &lt; &gt; に直す必要あり
    -->
    <description>Mechanoid for meny operations.</description>

    <!-- 種族定義 -->
    <race>
      <!-- 実施可能な作業の定義 -->
      <mechEnabledWorkTypes>
        <li>Construction</li> <!-- 建設・解体 -->
        <li>Smithing</li> <!-- 鍛冶 -->
        <li>Tailoring</li> <!-- 裁縫 -->
        <li>Crafting</li> <!-- 工芸 -->
        <li>Hauling</li> <!-- 運搬 -->
        <li>Cleaning</li> <!-- 清掃 -->
      </mechEnabledWorkTypes>

      <!-- 優先順位 -->
      <!-- 大まかな方針としては 農作業系 > 料理 > 採掘 > 建設 > 運搬・掃除 -->
      <mechWorkTypePriorities>
        <Construction>1</Construction>
        <Smithing>2</Smithing>
        <Tailoring>2</Tailoring>
        <Crafting>3</Crafting>
        <Hauling>4</Hauling>
        <Cleaning>4</Cleaning>
      </mechWorkTypePriorities>

      <!-- メカのスキルレベル -->
      <mechFixedSkillLevel>16</mechFixedSkillLevel>
    </race>

    <!-- レシピとか研究欄とかで表示されるアイコンとその拡大スケール -->
    <uiIconPath>UI/BetaStar</uiIconPath>
    <uiIconScale>1</uiIconScale>

  </ThingDef>

</Defs>
