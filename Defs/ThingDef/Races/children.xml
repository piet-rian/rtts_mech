<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ワスプドローンをベースに適当に書き換えている -->

  <ThingDef ParentName="BaseDrone">
    <defName>RTTS_Mech_children</defName>
    <label>TODO C</label>
    <description>TODO</description>
    <statBases>
      <MoveSpeed>12.0</MoveSpeed>
      <MaxFlightTime>6000</MaxFlightTime>
    </statBases>
    <race>
      <body>RTTS_Mech_Body_WorkableStar</body> <!-- `BodyDef_star.xml` で定義されているボディ -->
      <thinkTreeConstant>HunterDroneConstant</thinkTreeConstant> <!-- TODO: 暫定でハンタードローンと同じ挙動 -->
      <baseHealthScale>0.35</baseHealthScale>
      <baseBodySize>0.7</baseBodySize>
      <hasCorpse>false</hasCorpse> <!-- falseにすると死体処理が必要なくなる -->
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Wasp_Wounded</soundWounded>
          <soundDeath>Pawn_Wasp_Death</soundDeath>
          <soundCall>Pawn_Wasp_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
    <butcherProducts>
      <Steel>3</Steel>
    </butcherProducts>

    <!-- 装備なし近接攻撃時の内容定義(ジェットスター流用) -->
    <tools Inherit="False">
      <li>
        <label>twinkle</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>2</power>
        <cooldownTime>0.1</cooldownTime>
        <armorPenetration>0.99</armorPenetration>
        <chanceFactor>1.0</chanceFactor>
        <extraMeleeDamages>
          <li>
            <def>EMP</def>
            <amount>50</amount>
          </li>
          <li>
            <def>Frostbite</def>
            <amount>7</amount>
          </li>
        </extraMeleeDamages>
        <linkedBodyPartsGroup>RTTS_TwinkleAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>

    <comps>
      <li Class="CompProperties_MechPowerCell">
        <totalPowerTicks>12500</totalPowerTicks> <!-- 5 hours -->
        <labelOverride>Battery power</labelOverride>
        <tooltipOverride>Drones have limited battery life. When the battery runs dry, the drone dies.</tooltipOverride>
        <showGizmoOnNonPlayerControlled>true</showGizmoOnNonPlayerControlled>
      </li>
    </comps>
  </ThingDef>

</Defs>
