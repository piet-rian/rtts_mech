<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ドローンを元にしていたが、装備周りが上手く動作しなかったためにウォーアーチンを元に変更 -->
  <ThingDef ParentName="LightMechanoid">
    <defName>RTTS_Mech_children</defName>
    <label>Bit star</label>
    <description>A mechanoid generated by Dreaming Night.\nBoasts attack capabilities equivalent to
      Jet Star.\nAutomatically disappears after operating for a set time.</description>
    <statBases>
      <MoveSpeed>12.0</MoveSpeed>
      <!-- TODO: ドローンベース側の体定義側に浮力の原動力があると予想されるため <MaxFlightTime>6000</MaxFlightTime> -->
    </statBases>
    <race>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_WarUrchin_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_WarUrchin_Death</soundDeath>
          <soundCall>Pawn_Mech_WarUrchin_Call</soundCall>
        </li>
      </lifeStageAges>
      <body>RTTS_Mech_Body_WorkableStar</body> <!-- ボディだけ星系統に戻して射撃ができることは確認済み -->
      <thinkTreeConstant>WarUrchinConstant</thinkTreeConstant>
      <baseHealthScale>0.35</baseHealthScale>
      <baseBodySize>0.7</baseBodySize>
      <hasCorpse>false</hasCorpse> <!-- falseにすると死体処理が必要なくなる -->
    </race>

    <!-- 装備なし近接攻撃時の内容定義(ジェットスター流用) -->
    <tools Inherit="False">
      <li>
        <label>twinkle</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>2</power>
        <cooldownTime>0.1</cooldownTime>
        <armorPenetration>0.99</armorPenetration>
        <chanceFactor>1.0</chanceFactor>
        <extraMeleeDamages>
          <li>
            <def>EMP</def>
            <amount>50</amount>
          </li>
          <li>
            <def>Frostbite</def>
            <amount>7</amount>
          </li>
        </extraMeleeDamages>
        <linkedBodyPartsGroup>RTTS_TwinkleAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>

    <comps Inherit="False">
      <li Class="CompProperties_MechPowerCell">
        <totalPowerTicks>6001</totalPowerTicks>
      </li>
    </comps>
  </ThingDef>

</Defs>
