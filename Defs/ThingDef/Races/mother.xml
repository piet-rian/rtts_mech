<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Warqueen のXMLほぼそのまま -->
  <ThingDef Name="RTTS_Mech_MotherWarqueen" ParentName="SuperHeavyMechanoid">
    <defName>RTTS_Mech_Mother</defName>
    <label>Dreaming Night</label>
    <description>A mechanoid for generating Bit Stars.\nIts slow movement and lack of combat ability
      require careful placement.</description>
    <statBases>
      <MarketValue>15000</MarketValue> <!-- 市場価値 -->
      <MoveSpeed>0.9</MoveSpeed>
      <EnergyShieldRechargeRate>0.5</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>3</EnergyShieldEnergyMax>
      <MeleeDoorDamageFactor>1.5</MeleeDoorDamageFactor>
      <EMPResistance>0.7</EMPResistance>
      <BandwidthCost>9</BandwidthCost> <!-- 要求帯域幅 -->
    </statBases>
    <race>
      <body>Mech_Warqueen</body>
      <baseBodySize>4</baseBodySize>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Warqueen_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Warqueen_Death</soundDeath>
          <soundCall>Pawn_Mech_Warqueen_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Warqueen_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Warqueen_Death</soundDeath>
          <soundCall>Pawn_Mech_Warqueen_Call</soundCall>
        </li>
      </lifeStageAges>
      <baseHealthScale>1.0</baseHealthScale>
    </race>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_MechCarrier">
        <spawnPawnKind>RTTS_Mech_children</spawnPawnKind> <!-- 小型ジェットスター的なやつを生成する -->
        <fixedIngredient>Steel</fixedIngredient>
        <costPerPawn>50</costPerPawn>
        <cooldownTicks>6000</cooldownTicks> <!-- 再生成のクールダウン, ILSpyで構造見る限りpubulicで変更可能だった -->
        <maxPawnsToSpawn>30</maxPawnsToSpawn> <!-- 一度の生成数, 同上 -->
        <startingIngredientCount>5000</startingIngredientCount>
        <maxIngredientCount>1000</maxIngredientCount>
        <spawnEffecter>WarqueenWarUrchinsSpawned</spawnEffecter>
        <spawnedMechEffecter>WarUrchinSpawned</spawnedMechEffecter>
        <attachSpawnedEffecter>true</attachSpawnedEffecter>
        <attachSpawnedMechEffecter>true</attachSpawnedMechEffecter>
      </li>
      <!-- ウォークイーンはタレット装備してたがこいつには持たせない -->
    </comps>
  </ThingDef>

</Defs>
