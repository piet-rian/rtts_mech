<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ワークスター・ベータ : 採集伐採・栽培担当 -->

  <ThingDef ParentName="RTTS_Mech_work_star">
    <defName>RTTS_Mech_beta_star</defName>
    <label>work star beta</label>
    <description>Mechanoid for construction and mining operations.
      \n\n&lt;color=#808080&gt;EnabledWork: Firefighter, PlantCutting, Growing, Hauling, Cleaning&lt;/color&gt;</description>

    <!-- 種族定義 -->
    <race>
      <!-- 実施可能な作業の定義 -->
      <mechEnabledWorkTypes>
        <li>Firefighter</li><!-- 消火 -->
        <li>PlantCutting</li> <!-- 採集伐採 -->
        <li>Growing</li> <!-- 栽培 -->
        <li>Hauling</li> <!-- 運搬 -->
        <li>Cleaning</li> <!-- 清掃 -->
      </mechEnabledWorkTypes>

      <!-- 優先順位 -->
      <mechWorkTypePriorities>
        <Firefighter>1</Firefighter>
        <PlantCutting>1</PlantCutting>
        <Growing>2</Growing>
        <Hauling>4</Hauling>
        <Cleaning>4</Cleaning>
      </mechWorkTypePriorities>
    </race>

    <!-- レシピとか研究欄とかで表示されるアイコンとその拡大スケール -->
    <uiIconPath>UI/BetaStar</uiIconPath>
    <uiIconScale>1</uiIconScale>

  </ThingDef>

</Defs>
