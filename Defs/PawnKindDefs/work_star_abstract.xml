<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 作業用メカノイド群の共通定義 -->
  <PawnKindDef Abstract="True" Name="RTTS_Mech_PawnKind_work_star" ParentName="LightMechanoidKind">
    <defaultFactionType>PlayerColony</defaultFactionType> <!-- Player Only -->
    <controlGroupPortraitZoom>2.0</controlGroupPortraitZoom>
    <minGenerationAge>0</minGenerationAge>
    <combatPower>100</combatPower>

    <!-- 使用する武器を価格で制限 -->
    <weaponMoney>9999~9999</weaponMoney>
    <weaponTags>
      <!-- なのだが、このメカノイドは素手メカノイドなので、使用可能武器タグと含めて意味がない -->
    </weaponTags>

    <!-- 付与される義体の価値、らしい -->
    <techHediffsMoney>9999~9999</techHediffsMoney>
    <techHediffsChance>1</techHediffsChance>

    <!-- それぞれの指定の意味はなんとなくわかるが、詳しいことがわからない部分 -->
    <isFighter>false</isFighter>
    <aiAvoidCover>true</aiAvoidCover>
    <destroyGearOnDrop>true</destroyGearOnDrop>
    <canStrip>false</canStrip>
    <forceNormalGearQuality>true</forceNormalGearQuality>
  </PawnKindDef>

</Defs>
