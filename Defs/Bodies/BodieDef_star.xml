<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- mechfoxを参考に、重要パーツを隔壁内部に集中させる方式とした -->

  <!-- see. https://rimworldwiki.com/wiki/Body_Parts#Mechanoids -->

  <!--
    parts の木構造は以下の通り
      RTTS_BodyPart_WorkableStar_Torso [胸部]
      ├─ MechanicalNeck [首]
      │  └─ MechanicalHead [頭部]
      │     ├─ SightSensor [視覚センサー]
      │     ├─ HearingSensor [聴覚センサー]
      │     └─ SmellSensor [嗅覚センサー]
      ├─ RTTS_BodyPart_WorkableStar_ArmoredBox [隔壁内部]
      │  ├─ ArtificialBrain [人工脳]
      │  ├─ MechanicalThoraxCanManipulate [手足操作用の胸部]
      │  ├─ Reactor [リアクター]
      │  └─ FluidReprocessor [流体再処理装置]
      ├─ MechanicalLeg [前左脚]
      │  └─ MechanicalFoot [前左足]
      ├─ MechanicalLeg [前右脚]
      │  └─ MechanicalFoot [前右足]
      ├─ MechanicalLeg [後左脚]
      │  └─ MechanicalFoot [後左足]
      └─ MechanicalLeg [後右脚]
          └─ MechanicalFoot [後右足]
  -->
  <BodyDef>
    <defName>RTTS_Mech_Body_WorkableStar</defName>
    <label>WorkableStar Body</label>
    <corePart>
      <def>RTTS_BodyPart_WorkableStar_Torso</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <groups>
        <li>Torso</li>
      </groups>
      <parts>
        <li>
          <def>MechanicalNeck</def>
          <coverage>0.10</coverage>
          <height>Top</height>
          <parts>
            <li>
              <def>MechanicalHead</def>
              <coverage>0.80</coverage>
              <groups>
                <!-- `//ThingDef[defName="RTTS_Mech_alpha_star"]/race/tools`
                で参照されていて、この部位で殴ってる扱いになる -->
                <li>HeadAttackTool</li>
              </groups>
              <parts>
                <!-- 頭脳パーツは重要部位であるため、頭部に配置せずより強固に保護された場所に格納する -->
                <li>
                  <def>SightSensor</def>
                  <customLabel>left sight sensor</customLabel>
                  <coverage>0.13</coverage>
                </li>
                <li>
                  <def>SightSensor</def>
                  <customLabel>right sight sensor</customLabel>
                  <coverage>0.13</coverage>
                </li>
                <li>
                  <def>HearingSensor</def>
                  <customLabel>left hearing sensor</customLabel>
                  <coverage>0.10</coverage>
                </li>
                <li>
                  <def>HearingSensor</def>
                  <customLabel>right hearing sensor</customLabel>
                  <coverage>0.10</coverage>
                </li>
                <li>
                  <def>SmellSensor</def>
                  <coverage>0.10</coverage>
                </li>
              </parts>
            </li>
          </parts>
        </li>
        <li>
          <!-- 追加部位: 隔壁内部 -->
          <def>RTTS_BodyPart_WorkableStar_ArmoredBox</def>
          <customLabel>armored box</customLabel>
          <coverage>0.26</coverage>
          <depth>Inside</depth>
          <parts>
            <li>
              <def>ArtificialBrain</def>
              <customLabel>artificial brain</customLabel>
              <coverage>0.35</coverage>
              <depth>Inside</depth>
            </li>
            <li>
              <def>MechanicalThoraxCanManipulate</def>
              <coverage>0.25</coverage>
              <depth>Inside</depth>
            </li>
            <li>
              <def>Reactor</def>
              <coverage>0.15</coverage>
              <depth>Inside</depth>
            </li>
            <li>
              <def>FluidReprocessor</def>
              <coverage>0.15</coverage>
              <depth>Inside</depth>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalLeg</def>
          <customLabel>front left wing</customLabel>
          <coverage>0.16</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>MechanicalFoot</def>
              <customLabel>front left sensor</customLabel>
              <coverage>0.5</coverage>
              <groups>
                <li>FrontLeftLeg</li>
              </groups>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalLeg</def>
          <customLabel>front right wing</customLabel>
          <coverage>0.16</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>MechanicalFoot</def>
              <customLabel>front right sensor</customLabel>
              <coverage>0.5</coverage>
              <groups>
                <li>FrontRightLeg</li>
              </groups>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalLeg</def>
          <customLabel>rear left wing</customLabel>
          <coverage>0.16</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>MechanicalFoot</def>
              <customLabel>rear left sensor</customLabel>
              <coverage>0.5</coverage>
            </li>
          </parts>
        </li>
        <li>
          <def>MechanicalLeg</def>
          <customLabel>rear right wing</customLabel>
          <coverage>0.16</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>MechanicalFoot</def>
              <customLabel>rear right sensor</customLabel>
              <coverage>0.5</coverage>
            </li>
          </parts>
        </li>
      </parts>
    </corePart>
  </BodyDef>
</Defs>
